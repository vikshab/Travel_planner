<section id="things_todo" class="bodysec">
  <div id="copy">
  <% if @popular_things_todo != nil  %>
    <div class="box-table">
      <table data-fn="contacts">
        <tbody>
          <% @popular_things_todo.each do |activity| %>
          <% if activity != nil%>
            <tr>
              <td class="Destination_image"><%= image_tag(activity["imageUrl"], size: "30x30")%></td>
              <td><%= activity["title"] %></td>
              <td><%= activity["fromPrice"] %></td>
              <td><%= activity["duration"] %></td>
              <td><span class="add"><%= link_to "âˆš"%></span></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
        </table>
      </div>
      <% else %>
      <p>Unfortunately, no activities were found in <%= @trip.destination.capitalize %></p>
    <% end %>
  </div>
</section>

<section id="budget" class="bodysec">
<span class="hide">CLICK ME TO HIDE</span>

  <div id="copy">
    <span class='tasks'></span>
    <% if @tasks != nil %>
      <% @tasks.each do |task| %>
      <%= task.title %>
      <%= task.description %>
      <%= task.date %>
      <% end %>
    <% end %>

    <!-- <span class="see_tasks"><%= link_to "Show Tasks", "/" + current_user.user_name + "/" + @trip.id.to_s +  "/tasks" %></span> -->
  </div>

  <div class="box-table">
    <!-- <table data-fn="contacts"> -->
      <table class="calendar-table">
        <tr class="calendar-header"><span class="destination_input"><%= @trip.destination.capitalize %></span></tr>
        <tbody>
          <% @calendar.each do |date| %>
            <tr>
              <td class="calendar-header-day"><%= date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <!-- </table> -->
  </div>
  <br><br>

  <!-- <div class="form-group hide"> -->
    <div class="form-horizontal">
      <%= form_for(Task.new, url: "/" + current_user.user_name + "/" + @trip.id.to_s + "/tasks") do |f| %>
        <div class="form-group">
          <label class="col-xs-1 control-label">Task(s)</label>
          <div class="col-xs-3">
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="col-xs-3">
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="col-xs-4">
            <span class="glyphicon glyphicon-calendar"></span>
            <%= f.date_field :date, class: 'datepicker' %>
            <i class="fa fa-plus"><span class="addTask"><%= f.submit "+", class: "btn btn-default" %></span></i>
          </div>
        </div>
      <% end %>
    </div>
  <!-- </div> -->
</section>

