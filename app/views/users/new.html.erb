<!-- main -->
<div class="column col-sm-9" id="main">
  <div class="padding">
    <div class="full col-sm-9">

      <%= render partial: "shared/title.html.erb" %>

      <div class="row">
        <div class="col-sm-10">
          <%= form_for @user do |f| %>

          <% if @user.errors.any? %>
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <small class="text-muted"><li class="list-unstyled error">*<%= msg %></li></small>
              <% end %>
              </ul>
          <% end %>

            <div class="form-group">
              <small class="text-muted"><%= f.label :user_name, "User Name", class: "required" %></small>
              <%= f.text_field :user_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <small class="text-muted"><%= f.label :email, class: "required" %></small>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
              <small class="text-muted"><%= f.label :password, class: "required" %></small>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group">
              <small class="text-muted"><%= f.label :password_confirmation, "Confirm Password", class: "required" %></small>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <div class="form-group">
              <small class="text-muted"><%= f.label :phone, "Phone number" %></small>
              <%= f.password_field :phon, class: "form-control" %>
            </div>

            <%= f.submit "Create account", class: "btn btn-mini btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
