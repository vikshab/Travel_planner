<section class="homepage">
  <div class="row">

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    
    <div class="signup">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <h2>Sign up</h2>
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <ul>
             <% @user.errors.full_messages.each do |msg| %>
              <li class="list-unstyled error">*<%= msg %></li>
              <% end %>
            </ul>
          <% end %>
          <div class="form-group">
            <!-- <%= f.label :user_name, "User Name", class: "required" %> -->
            <%= f.text_field :user_name, class: "form-control", placeholder: "User name" %>
          </div>

          <div class="form-group">
            <!-- <%= f.label :email, class: "required" %> -->
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <!-- <%= f.label :password, class: "required" %> -->
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <!-- <%= f.label :password_confirmation, "Confirm Password", class: "required" %> -->
            <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Password confirmation" %>
          </div>

          <div class="form-group">
            <!-- <%= f.label :phone, "Phone number" %> -->
            <%= f.password_field :phone, class: "form-control", placeholder: "Phone (optional)" %>
          </div>

          <%= f.submit "Create account", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</section>
