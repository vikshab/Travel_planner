<section class="homepage">
  <div class="signup">
    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <h2>Sign up</h2>

        <%= form_for @user do |f| %>

          <% if @user.errors.any? %>
             <% @user.errors.full_messages.each do |msg| %>
              <div class="alert alert-error">*<%= msg %></div>
              <% end %>
          <% end %>

          <div class="form-group">
            <%= f.text_field :user_name, class: "form-control", placeholder: "User name" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control",placeholder: "Password confirmation" %>
          </div>

          <div class="form-group">
            <%= f.password_field :phone, class: "form-control", placeholder: "Phone (optional)" %>
          </div>

          <%= f.submit "Create account", class: "btn btn-primary" %>
        <% end %>

        <%= render "shared/footer" %>
      </div>

    <div class="col-sm-4"></div>
    </div>
  </div>
</section>
