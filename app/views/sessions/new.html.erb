<section class="homepage">
  <div class="row">
    <% if flash[:error] %>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    <% end %>

    <div class="signup">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <h2>Log in</h2>
          <%= form_for(:session) do |f| %>
            <div class="form-group">
              <%= f.text_field :user_name, placeholder:"Enter your username", class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.password_field :password, placeholder:"Enter a password", class: "form-control"%><br>
            </div>
              <%= f.submit "Log in", class: "btn btn-primary" %>
          <% end %>

          </div>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
</section>
